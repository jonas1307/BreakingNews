@model BreakingNews.Application.ViewModels.RoleViewModel

@{
    ViewBag.Title = $"{(string.IsNullOrEmpty(Model.Id) ? "Cadastro" : "Alteração")} de Role";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("SaveRole", "Users", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.Id)

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", autocomplete = "off" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>

    <div class="form-group">
        <button class="btn btn-success" type="submit">Salvar</button>
        <a href="@Url.Action("Index", "Users")" class="btn btn-danger">Voltar</a>
    </div>
}
