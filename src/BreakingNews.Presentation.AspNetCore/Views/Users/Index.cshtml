@model BreakingNews.Application.ViewModels.UserIndexViewModel

@{
    ViewBag.Title = "Usuários";
    Layout = "_Layout";
}
<br />
<div>
    @Html.ActionLink("Criar Usuário", "New", "Users", null, new { @class = "btn btn-success" }) | @Html.ActionLink("Criar Role", "NewRole", "Users", null, new { @class = "btn btn-success" })
</div>
<br />
<h1>Usuários</h1>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Usuário</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Users.Any())
        {
            foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td><a class="btn-sm btn-primary" href="@Url.Action("Edit", new {id = user.Id.ToUpper()})">Editar</a> | <a class="btn-sm btn-danger" href="@Url.Action("Delete", new {id = user.Id.ToUpper()})">Excluir</a></td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2">Não há usuários para exibir.</td>
            </tr>
        }
    </tbody>
</table>
<br />
<h1>Roles</h1>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Role</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Roles.Any())
        {
            foreach (var role in Model.Roles)
            {
                <tr>
                    <td>@role.Name</td>
                    <td><a class="btn-sm btn-primary" href="@Url.Action("EditRole", new {id = role.Id.ToUpper()})">Editar</a> | <a class="btn-sm btn-danger" href="@Url.Action("DeleteRole", new {id = role.Id.ToUpper()})">Excluir</a></td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2">Não há usuários para exibir.</td>
            </tr>
        }
    </tbody>
</table>